@model List<DemoMVC.Models.Mascota>

@{
    ViewData["Title"] = "Mascotas en adopción";
}

<h2 class="mb-3">🐾 Mascotas disponibles</h2>

<a asp-action="Crear" class="btn btn-success mb-3">
    ➕ Registrar nueva mascota
</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Tipo</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var mascota in Model)
        {
            <tr>
                <td>@mascota.Nombre</td>
                <td>@mascota.Tipo</td>
                <td>
                    <a asp-action="Detalle"
                       asp-route-id="@mascota.Id"
                       class="btn btn-primary btn-sm">
                        Ver detalle
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
