@model DemoMVC.Models.Mascota

@{
    ViewData["Title"] = "Detalle de Mascota";
}

<h2 class="mb-3">Detalle de la mascota</h2>

<div class="card shadow" style="max-width: 600px;">
    <div class="row g-0">

        <!-- Imagen -->
        <div class="col-md-4">
            <img src="@(string.IsNullOrEmpty(Model.ImagenUrl)
                                         ? "/images/mascotas/default.png"
                                         : Model.ImagenUrl)"
                 class="img-fluid rounded-start"
                 alt="Imagen de @Model.Nombre" />
        </div>

        <div class="col-md-8">
            <div class="card-body">
                <h4 class="card-title">@Model.Nombre</h4>

                <p class="card-text">
                    <strong>Tipo:</strong> @Model.Tipo
                </p>

                <a asp-action="Index" class="btn btn-secondary">
                    Volver
                </a>
            </div>
        </div>
    </div>
</div>
